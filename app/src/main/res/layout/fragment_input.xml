<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="身長と体重を入力してください"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="57dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/height"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
    />
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextView4"
            app:layout_constraintEnd_toStartOf="@+id/weight" android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" app:layout_constraintBottom_toBottomOf="@+id/weight"
            android:layout_marginEnd="38dp"/>
    <TextView
            android:text="kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/height" app:layout_constraintStart_toEndOf="@+id/weight"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="104dp"
    />
    <TextView
            android:text="あなたのBMIは"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/text_BMI_view"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.947" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/memo"/>
    <TextView
            android:text="でした。"
            android:layout_width="64dp"
            android:layout_height="23dp"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="164dp"
            app:layout_constraintBottom_toTopOf="@+id/saveButton" app:layout_constraintVertical_bias="0.852"/>
    <Button
            android:text="BMIを計算する"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/calcButton"
            android:bufferType="spannable"
            android:textColorLink="@android:color/system_notification_accent_color"
            android:textColorHighlight="@android:color/background_dark"
            android:background="#4792b3"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginEnd="44dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/weight"/>


    <EditText
            android:layout_width="145dp"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/height"

            android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/weight"

            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/TextView4" app:layout_constraintEnd_toStartOf="@+id/textView5"
            android:layout_marginEnd="15dp"/>
    <TextView
            android:text="身長"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:id="@+id/textView2"
            app:layout_constraintBaseline_toBaselineOf="@+id/height"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"/>
    <EditText
            android:layout_width="97dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/text_BMI_view"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="248dp" android:layout_marginEnd="28dp"/>

    <Button
            android:text="保存"
            android:background="#368db3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="@+id/memo"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteButton" android:text="削除"
            app:layout_constraintEnd_toStartOf="@+id/saveButton"
            android:layout_marginEnd="48dp" app:layout_constraintTop_toTopOf="@+id/saveButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"/>
    <!--<TextView-->
    <!--android:text="TextView"-->
    <!--android:layout_width="336dp"-->
    <!--android:layout_height="76dp"-->
    <!--android:id="@+id/memo" android:layout_marginBottom="8dp"-->
    <!--app:layout_constraintBottom_toTopOf="@+id/save" android:layout_marginTop="8dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/resultBMI" app:layout_constraintStart_toStartOf="parent"-->
    <!--android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"-->
    <!--android:hint="MEMO" app:layout_constraintHorizontal_bias="0.542"-->
    <!--app:layout_constraintVertical_bias="0.477"/>-->

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calcButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_BMI_view"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="118dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/memo"
            android:hint="MEMO"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="67dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_BMI_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/saveButton"
            android:layout_marginStart="3dp" android:layout_marginEnd="3dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>